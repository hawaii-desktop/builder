[Unit]
Description=Buildbot Master
Wants=network.target
After=network.target

[Service]
Type=forking
PIDFile=/srv/buildbot/master/twistd.pid
WorkingDirectory=/srv/buildbot/master
ExecStart=/srv/buildbot/env/bin/buildbot start /srv/buildbot/master
ExecReload=/srv/buildbot/env/bin/buildbot restart /srv/buildbot/master
ExecStop=/srv/buildbot/env/bin/buildbot stop /srv/buildbot/master
Restart=always
User=buildbot

[Install]
WantedBy=multi-user.target
